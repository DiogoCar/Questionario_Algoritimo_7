package exercicio_fix;

import javax.swing.JOptionPane;
import java.lang.Math;
/**
 *
 * @author Discente
 */
public class Exercicio_fix {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

    
      int sab,balls,des,des2,psov;
        
        String ssab,sballs;
   
        ssab=JOptionPane.showInputDialog(null, "Chocolate (1) ou Morango(2)?: ");
        sballs=JOptionPane.showInputDialog(null, "Quantas bolas?: ");
       
        
        
      sab= Integer.parseInt(ssab);
      balls= Integer.parseInt(sballs);
     
      
    
      
 
     if (sab == 1 && balls <= 3) 
{
psov= 4*balls;
des= (5*psov)/100;
des2= psov-des;
  
JOptionPane.showMessageDialog(null,"Valor total + desconto de 5%: "+des2);
}
else

if(sab == 1 && balls > 3)
{
psov= 4*balls;
des= (10*psov)/100;
des2= psov-des;

JOptionPane.showMessageDialog(null,"Valor total + desconto de 10%: "+des2);
  }
else

if (sab == 2 && balls <= 3) 
{

psov= 3*balls;
des= (5*psov)/100;
des2= psov-des;

JOptionPane.showMessageDialog(null,"Valor total + desconto de 5%: "+des2);
}
else

psov= 3*balls;
des= (10*psov)/100;
des2= psov-des;

JOptionPane.showMessageDialog(null,"Valor total + desconto de 10%: "+des2); 
      
      
 

   
    }
}

    
       
      
    
    
     
